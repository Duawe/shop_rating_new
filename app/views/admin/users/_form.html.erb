<div class="d-flex justify-content-center align-items-center">
  <%= form_with model: [ :admin, @user], local: true do |f| %>

  <% if @user.errors.any? %>
  <div class="errors">
    Total errors: <%= @user.errors.count %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :Логин %><br>
    </div>
    <div class="form-group col-md-6">
      <%= f.text_field :nickname, placeholder: "Логин" %>
    </div>


    <div class="form-group col-md-6">
      <%= f.label :Пароль %><br>
    </div>
    <div class="form-group col-md-6">
      <%= f.password_field :password, placeholder: "Парольы" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :Email %><br>
    </div>
    <div class="form-group col-md-6">
      <%= f.text_area :email, placeholder: "Email" %>
    </div>
  </div>
 

  <div class="d-flex justify-content-center align-items-center mb-4">
    <%= f.submit 'Создать', class: "btn btn-outline-success" %>
  </div>
  <% end %>
</div>
