<div class="row">
  <div class="col-md-12">
    <h1>Пользователи <%= link_to 'Создать польхователя', new_admin_user_path, class: 'btn btn-success' %></h1>
  </div>
</div>

<hr>

<table class="table table-striped">
  <tr>
    <th>Логин</th>
    <th>Email</th>
    <th>Действия</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Просмотреть', admin_user_path(user) %>
          <%= link_to 'Редактировать', edit_admin_user_path(user) %>
          <%= link_to 'Удалить', admin_user_path(user),
                      method: :delete,
                      data: {confirm: 'Вы точно хотите удалить пользвателя?'} %>
        </td>
      </tr>
  <% end %>

</table>
