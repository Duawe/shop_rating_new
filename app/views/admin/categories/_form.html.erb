<div class="d-flex justify-content-center align-items-center">
  <%= form_with model: [ :category, @category], local: true do |f| %>

    <% if @category.errors.any? %>
      <div class="errors">
        Total errors: <%= @category.errors.count %>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-row">
      <div class="form-group col-md-">
        <%= f.label :name %><br>
        <%= f.text_field :name, placeholder: "Категория" %>
      </div>
    </div>

    <div class="d-flex justify-content-center align-items-center mb-4">
      <%= f.submit 'Создать', class: "btn btn-outline-success" %>
    </div>
  <% end %>
</div>
